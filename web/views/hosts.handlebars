<table class="table table-hover" id="hosts">
    <thead>
    <th>
        id
    </th>
    <th>
        Hostname
    </th>
    <th>
        Comment
    </th>
    </thead>
</table>

<div class="modal fade" id="editHostModal" tabindex="-1" role="dialog" aria-labelledby="editHostModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editHostModalLabel">Edit host</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="host-comment" class="col-form-label">Comment:</label>
                        <input type="text" class="form-control" id="commentHost">
                        <input type="hidden" id="idHost" value="">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveHost">Save</button>
            </div>
        </div>
    </div>
</div>